<!--using card view to show touch selector-->
<!--https://stackoverflow.com/questions/34047815/how-to-have-selectableitembackground-on-imageview-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="@drawable/touch_selector">

    <!--This ImageView holds the poster image for one particular movie in the grid-->
    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:id="@+id/iv_movie_poster"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/movie_picture_content_description"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"/>

</android.support.v7.widget.CardView>