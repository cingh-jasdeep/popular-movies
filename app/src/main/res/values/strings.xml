<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">
    <string name="app_name">Pop Movies</string>


    <!-- - - - - - - - - - - - - -->
    <!--Used by MovieUtils-->
    <!-- - - - - - - - - - - - - -->
    <!-- movie release date TMDB api format -->
    <string name="TMDB_DATE_FORMAT" translatable="false">yyyy-mm-dd</string>

    <!-- movie release date display format -->
    <string name="display_format_release_date" translatable="false">yyyy</string>

    <!-- movie rating average display format -->
    <string name="display_format_voting_average" translatable="false">
        <xliff:g id="rating">%1$s</xliff:g>/10
    </string>

    <!-- message to indicate network error -->
    <string name="error_message">An error has occurred!\nPlease try again later.</string>

    <string name="movie_picture_content_description">Movie picture</string>

    <!-- settings menu label and activity label -->
    <string name="action_settings">Settings</string>

    <!-- movie details activity label -->
    <string name="movie_detail_label">MovieDetail</string>
    <!-- message to indicate no movie data in movie details screen -->
    <string name="detail_error_message">Movie data not available.</string>

    <!-- Label for the sort order preference -->
    <string name="pref_sort_label">Sort Order</string>

    <!-- Key name for storing sort order in SharedPreferences [CHAR LIMIT=NONE] -->
    <string name="pref_sort_key" translatable="false">sort</string>

    <!-- Label in SharedPreferences for isPopular sort option -->
    <string name="pref_sort_label_popular">Most Popular</string>
    <!-- Label in SharedPreferences for top rated sort option -->
    <string name="pref_sort_label_top_rated">Highest Rated</string>
    <!-- Label in SharedPreferences for favorites sort option -->
    <string name="pref_sort_label_favorite">Favorites</string>

    <!-- Value in SharedPreferences for isPopular sort option -->
    <string name="pref_sort_popular" translatable="false">isPopular</string>
    <!-- Value in SharedPreferences for top rated sort option -->
    <string name="pref_sort_top_rated" translatable="false">top_rated</string>
    <!-- Value in SharedPreferences for favorites sort option -->
    <string name="pref_sort_favorite" translatable="false">isFavorite</string>

    <!-- Default value in SharedPreferences sort option -->
    <string name="pref_sort_default" translatable="false">@string/pref_sort_popular</string>


    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
      - Used for Accessibility purposes (Accessibility == a11y)                            -
      -                                                                                    -
      - Fun Fact: Accessibility is abbreviated a11y because accessibility starts with 'a', -
      - followed by 11 letters, and then a 'y'. It is pronounced alley, like an alley cat. -
      - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <string name="a11y_poster">Movie Poster: <xliff:g id="movie_name">%1$s</xliff:g></string>

    <string name="message_no_show">No movies to show!</string>
    <string name="pref_last_network_update" translatable="false">last_network_update</string>
    <string name="action_refresh">Refresh</string>

</resources>
